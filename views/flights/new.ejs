<%- include('../partials/header') %>
<h2>Enter a New Flight</h2>
<form id="new-form" action="/flights" method="POST">
  <label>Airline:</label>
  <select type="string" name="airline">
  <option value="American">American</option>
  <option value="Southwest">Southwest</option>
  <option value=United>United</option>
</select>

  <label>Airport:</label>
  <select type="string" name="airport">
  <option value="AUS">AUS</option>
  <option value="DFW">DFW</option>
  <option value="DEN">DEN</option>
  <option value="LAX">LAX</option>
  </select>
 
  <label>Flight Number</label>
  <input type="number" name="flightNo" min="10" max="9999" required>
  
  <label>Departs:</label>
  <input type="datetime-local" name="departs">
  
  <input type="submit" value="Add Flight">
</form>


